{
    "Id": "S3LogsBucketPolicy",
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ApplicationLoadBalancerACL",
            "Action": [
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "${bucket_arn}/alb/*"
            ],
            "Principal": {
                "AWS": [
                    "${alb_principal_arn}"
                ]
            }
        },
        {
            "Sid": "CloudFrontLogDelivery",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${aws_account_id}:root"
            },
            "Action": [
                "s3:PutObject"
            ],
            "Resource": "${bucket_arn}/cloudfront/*"
        }
    ]
}